<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
   <tr>
      <th class="text-primary" colspan="5">Student List</th>
      <th>
         <a class="btn btn-primary" href="/toy/add">ADD</a>
         <a class="btn btn-success" href="/toy/drop"
            onclick="return confirm('Are you sure to drop all toy ?');">DROP</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Image</th>
      <th>Price</th>
   </tr>
   <tr>
      <th colspan="5">
         <select class="form-control" onchange="window.location.href=this.value">
            <option value="">Sort by name</option>
            <option value="/toy/sort/asc">Ascending</option>
            <option value="/toy/sort/desc">Descending</option>
         </select>
      </th>
      <th colspan="1">
         <form action="/toy/search" method="post">
            <div class="form-group">
               <input class="form-control" type="search" name="name" placeholder="Search by name">
            </div>
         </form>
      </th>
   </tr>
   {{#each toy }}
   <tr>
      <td>{{name}}</td>
      <td>{{size}}</td>
      {{!-- <td>{{dateFormat dob "DD/MM/YYYY"}}</td> --}}
      <td>
         <a href="/toy/detail/{{_id}}">
            <img src="{{image}}" width="100" height="100">
         </a>
      </td>
 
      <td>{{price}}</td>
   </tr>
   <td>
         <a class="btn btn-warning" href="/toy/edit/{{_id}}">EDIT</a>
         <a class="btn btn-danger" href="/toy/delete/{{_id}}">DELETE</a>
      </td>
   {{/each}}
</table>